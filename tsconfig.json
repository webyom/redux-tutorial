{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES5",
    "lib": [
      "DOM",
      "ES5"
    ]
  },
  "paths": {
    "*": [
      "./types/*"
    ]
  },
  "include": [
    "src/**/*",
    "types"
  ]
}
