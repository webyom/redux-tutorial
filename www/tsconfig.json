{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["esnext", "dom"]
  },
  "paths": {
    "*": ["./types/*"]
  },
  "include": ["./src/**/*", "./types"]
}
